@model Owner

<section class="ftco-section-no-padding bg-light">
    <div class="hero-wrap">
        <div class="overlay"></div>
        <div class="d-flex align-items-center js-fullheight">
            <div class="author-image text img d-flex">
                <section class="home-slider js-fullheight owl-carousel">
                    @foreach (string url in Model.Banners)
                    {
                        <div class="slider-item js-fullheight" style="background-image: url(@url);">
                        </div>
                    }
                </section>
            </div>
            <div class="author-info text p-3 p-md-5">
                <div class="desc">
                    <span class="subheading">Hello! I'm</span>
                    <h1 class="big-letter">@Model.Name</h1>
                    <h1 class="mb-4"><span>@Model.Name</span> A Photographer. <span>I Capture Life</span></h1>
                    <p class="mb-4">@Model.AboutMe</p>
                    <h3 class="signature h1">@Model.Name</h3>
                    <ul class="ftco-social mt-3">
                        <li class="ftco-animate"><a href="@Model.Contact.VkUrl"><span class="icon-vk"></span></a></li>
                        <li class="ftco-animate"><a href="@Model.Contact.InstagramUrl"><span class="icon-instagram"></span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@await Component.InvokeAsync("Instagram"); 